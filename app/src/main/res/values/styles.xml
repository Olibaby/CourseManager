<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/hintStyle</item>
        <item name="android:textColorPrimary">#54707070</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorControlNormal">#21FFFFFF</item>
        <item name="android:colorControlActivated">#21FFFFFF</item>
        <item name="android:colorControlHighlight">#21FFFFFF</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button2_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="hintStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


</resources>
